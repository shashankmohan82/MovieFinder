<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorAccentSelected">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="172dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:background="#e2c19393"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="1dp"
        card_view:layout_collapseMode="none"
        card_view:layout_collapseParallaxMultiplier="0.0">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backdrop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp"
                android:adjustViewBounds="true"
                android:maxHeight="454dp"
                android:maxWidth="285dp"
                android:scaleType="centerCrop"
                android:tint="#aa000000"
                android:tintMode="src_atop"
                android:translationZ="1dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/arrival" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:editable="false"
                android:fontFamily="sans-serif"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center"
                android:padding="1dp"
                android:text="Arrival"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:translationZ="1dp"
                android:typeface="sans"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>