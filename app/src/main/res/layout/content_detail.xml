<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="task.application.com.moviefinder.view.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/ratingsview"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:src="@drawable/rt"
            android:id="@+id/imageView"
            android:scaleType="centerCrop"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="150dp"
            android:layout_toEndOf="@+id/imdb" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:src="@drawable/imdb"
            android:id="@+id/imdb"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plot"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/imdb"

            android:text="8.5/10" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/plotview"
            android:layout_below="@+id/ratingsview">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plottitle"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textSize="25sp"
            android:text="Plot"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/rating"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:layout_below="@id/plottitle"
            android:textSize="15sp"
            android:layout_margin="15dp"
            android:text="@string/large_text" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/genreview"
            android:layout_below="@+id/plotview">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tag"
                android:layout_marginLeft="15dp"
                android:id="@+id/tagimage"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/genre"
                android:layout_height="wrap_content"
                android:typeface="sans"
                android:layout_below="@id/tagimage"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="Mystery, Sci-fi" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
