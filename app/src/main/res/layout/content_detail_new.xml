<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/movie_dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:alpha="1"
            android:elevation="4dp"
            android:fadingEdge="horizontal"
            android:paddingBottom="5dp"
            android:paddingEnd="1dp"
            android:paddingStart="2dp"
            android:paddingTop="4dp"
            android:src="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:backgroundTint="@color/colorPrimaryDark"
            android:baselineAlignBottom="false"
            android:foregroundGravity="center_vertical"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/trailer" />

    </FrameLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basic_details">

        <TextView
            android:id="@+id/plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:clickable="false"
            android:padding="10dp"
            android:text="@string/lorem_ipsum"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:layout_row="0"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:text="Synopsis"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:layout_row="2"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:text="Cast"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <FrameLayout
            android:id="@+id/cast_image_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="3" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:layout_row="4"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:text="Crew"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <FrameLayout
            android:id="@+id/crew_image_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="5" />

    </GridLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:padding="0dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="28sp"
        android:typeface="normal"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/frameLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/relativeLayout2"
        app:layout_constraintHorizontal_bias="0.0" />

    <RelativeLayout
        android:id="@+id/basic_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/frameLayout"
        app:layout_constraintRight_toLeftOf="@+id/relativeLayout2"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <TextView
            android:id="@+id/genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lang"
            android:layout_margin="1dp"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:typeface="normal"
            tools:text="Drama, Thriller" />

        <TextView
            android:id="@+id/lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/runtime_date"
            android:layout_margin="1dp"
            android:padding="2dp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:typeface="normal"
            tools:text="Hindi" />

        <TextView
            android:id="@+id/runtime_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:typeface="normal"
            tools:text="2h 18min | Feb 10, 2017" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/basic_details"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <TextView
            android:id="@+id/rt_rating"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@+id/imageView12"
            android:layout_below="@+id/imdb_rating"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="19dp"
            android:textSize="15dp"
            android:layout_toEndOf="@+id/imageView12"
            android:text="83%"
            android:textColor="@color/textBlack" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/imageView10"
            android:cropToPadding="true"
            android:padding="5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/tomato" />

        <TextView
            android:id="@+id/imdb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView12"
            android:layout_alignBottom="@+id/imageView10"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/imageView10"
            android:text="8.9/10"
            android:textColor="@color/textBlack" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/imdb1" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="45dp"
        android:adjustViewBounds="false"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toRightOf="@+id/basic_details"
        app:layout_constraintTop_toTopOf="@+id/frameLayout"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="0dp"
        android:tint="?android:attr/textColorHighlightInverse"
        app:srcCompat="@drawable/ic_share_black_24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton4"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/relativeLayout2"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintTop_toTopOf="@+id/imageButton4"
        android:layout_marginTop="0dp" />

</android.support.constraint.ConstraintLayout>